<div class="row mt-2 project d-flex justify-content-center">
  {{!-- <form class="form update-form col-md-10 border border-dark bg-home rounded d-flex justify-content-center flex-column align-items-center"> --}}
  <form class="form update-form col-md-10 border border-dark bg-home rounded">
    <h2>Update your Post</h2>
    <div class="form-group">
      <label for="update-title">title:</label>
      <input
        class="form-input"
        type="text"
        id="update-title"
        value="{{title}}"
      />
    </div>
    <div class="form-group">
      <label for="update-content">content:</label>
      <textarea class="form-input mt-2" type="text" id="update-content">{{content}}</textarea>
      <input class="form-input" type="hidden" id="post_id" value="{{id}}" />
    </div>

  <div class="form-group d-flex justify-content-center my-2">
    <button class="btn btn-primary mx-2" type="submit">update my post</button>
    <button class="btn btn-primary" type="button" id="deleteBtn">delete my post</button>
  </div>
  </form>
  

</div>

<script src="/js/postUpdate.js"></script>