<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Webblog</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div>
      <header class="d-flex flex-row justify-content-between p-2 bg-info align-items-center">
        <h1 >
          <a class="text-decoration-none text-reset" href="/">Webblog</a>
        </h1>
        <nav>
          <a class="text-decoration-none text-reset" href="/">homepage</a>
          |
          {{#if logged_in}}
            <!-- Conditionally render login or logout links -->
            <a class="text-decoration-none text-reset" href="/dashboard">dashboard</a>
            |
            <button class="no-button" id="logout">logout</button>
          {{else}}
            <a href="/login"><button type="button">login/signup</button></a>
          {{/if}}
        </nav>
      </header>
      {{!-- <main class="container container-fluid mt-5"> --}}
      <main>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>