<div class="d-flex justify-content-center">
<a href="/dashboard/postCreate"><button class="mt-2 btn btn-primary">Create new post</button></a>
</div>

<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
  <div class="row mt-2 project d-flex justify-content-center">
    <div class="col-10 border border-dark bg-home rounded">
      <h2>
        <a
          class="text-decoration-none text-reset"
          href="/dashboard/update/{{post.id}}"
        >{{post.title}}</a>
      </h2>
    </div>
  </div>
{{/each}}

