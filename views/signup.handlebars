<div class="d-flex justify-content-center mt-5">
<div class="col-6">
  <h2>Signup</h2>

  <form class="form signup-form">
    <div class="form-group">
      <label for="username-signup">Username:</label>
      <input class="form-input" type="text" id="username-signup" />
    </div>
    <div class="form-group">
      <label for="password-signup">Password:</label>
      <input class="form-input mt-2" type="password" id="password-signup" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary mt-2" type="submit">Signup</button>
    </div>
  </form>
  <div>
    <p>Already signed up? <a href="/login">Login instead</a></p>
  </div>
</div>
</div>

<script src="/js/signup.js"></script>